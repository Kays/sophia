#!/usr/bin/env perl

# This configure file checks to see if required packages are installed on the
# system

print "Checking for Perl 5.10.0 ..... ";
eval {
    require 5.10.0;
    print "OK!\n";
    1;
} or print "not found (install Perl 5.10.0).\n";

print "Checking for POE ..... ";
eval {
    require POE;
    print "OK!\n";
    1;
} or print "not found (install POE).\n";

print "Checking for Carp ..... ";
eval {
    require Carp;
    print "OK!\n";
    1;
} or print "not found (install Carp).\n";

print "Checking for FindBin ..... ";
eval {
    require FindBin;
    print "OK!\n";
    1;
} or print "not found (install FindBin).\n";

print "Checking for POSIX ..... ";
eval {
    require POSIX;
    print "OK!\n";
    1;
} or print "not found (install POSIX).\n";

print "Checking for FindBin ..... ";
eval {
    require FindBin;
    print "OK!\n";
    1;
} or print "not found (install FindBin).\n";

print "Checking for Sub::Delete ..... ";
eval {
    use Sub::Delete;
    print "OK!\n";
    1;
} or print "not found (install Sub::Delete).\n";

print "Checking for Getopt::Long ..... ";
eval {
    use Getopt::Long;
    print "OK!\n";
    1;
} or print "not found (install Getopt:Long).\n";

print "Checking for Switch ..... ";
eval {
    use Switch;
    print "OK!\n";
    1;
} or print "not found (install Switch).\n";

print "Checking for HTTP::Request ..... ";
eval {
    use HTTP::Request;
    print "OK!\n";
    1;
} or print "not found (install HTTP::Request).\n";


print "Checking for HTTP::Response ..... ";
eval {
    use HTTP::Response;
    print "OK!\n";
    1;
} or print "not found (install HTTP::Response).\n";

print "Checking for LWP::UserAgent ..... ";
eval {
    use LWP::UserAgent;
    print "OK!\n";
    1;
} or print "not found (install LWP::UserAgent).\n";

print "Checking for URI::Heuristic ..... ";
eval {
    use URI::Heuristic;
    print "OK!\n";
    1;
} or print "not found (install URI::Heuristic).\n";

print "Checking for URI::Escape ..... ";
eval {
    use URI::Escape;
    print "OK!\n";
    1;
} or print "not found (install URI::Escape).\n";




